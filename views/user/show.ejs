<%- include("../partials/header") %>
 <div class="row" style="margin-top:1em;">
	<div class="col-md-5 ">
			<figure class="figure ">
		   <img class="figure-img img-fluid rounded user_fig col-md-9 " src="<%=user.avatar %>" alt="user profile image"><br>
	
		   <% if(currentUser && currentUser._id.equals(user.id)){ %>
			<button class="btn btn-primary float-center" data-toggle="collapse" href="#add"  style="margin-bottom:1em;">Edit &#160;<i class="fas fa-user-edit"></i></button>
			<div class="collapse" id="add" >
			<pre>
			
			</pre>	
			<hr>	
			<form id="add-dp-form" action="/users/<%=user.id%>?_method=PUT" method="POST" enctype="multipart/form-data" >
		<div class="row">
              <div class="col-md-6">
                <label for="firstName">First name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="<%=user.firstName%>">
              </div>
              <div class="col-md-6">
                <label for="lastName">Last name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" value="<%=user.lastName%>">
              </div>
            </div>	
			 <div class="form-group" style="margin-top:1em;">
                <label for="image">Upload a Profile Picture</label>
                <input type="file" id="image" name="image" accept="image/*">
				<div class="form-group" style="margin-top:1em;">
				<label for="bio">Add a Bio</label>	
              <textarea class="form-control" name="bio" id="bio" rows="5" cols="70" value=""><%=user.bio%></textarea>
            </div>
				 <button class="btn btn-success btn-sm"> Add </button> 
             </div>
		 </form>
		</div>
			<% } %>
		   <figcaption id="fig"><h3><%=user.firstName + " " + user.lastName%></h3>
			<a href="mailto:<%=user.email%>"><%=user.email%></a>
			 <p><%-user.bio %></p>  
		   </figcaption>
		</figure>
    </div>
	 <div>
		 
	 </div>

		<div class="col-md-7 album py-3 bg-light" >
		<div class="container-fluid">
			<div class="row">
				<h3><%=user.username %>'s campgrounds</h3>
			</div>
		<ul>
		<%campgrounds.forEach(function(campground){ %>
		<li class="list-group-item "><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
		<li class="list-group-item " ><img src="<%= campground.image %>" id="profile"></li>
		
	<% }); %>
		</ul>
			</div>
	   </div>
	 </div>
	 
	
	
	



<%- include("../partials/footer") %>
